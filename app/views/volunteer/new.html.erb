<div class="logmod">
  <div class="logmod__wrapper">
    <span class="logmod__close"><a href="/"></a>Close</span>
    
    <div class="logmod__container">
      <ul class="logmod__tabs">
        <li data-tabtar="lgm-2"><%= link_to volunteer_register_path do %> Sign In <span class="fa fa-sign-in"></span><% end %></li>
        <li data-tabtar="lgm-1"><%= link_to volunteer_register_path do %> Sign Up <span class="fa fa-lock"></span><% end %></li>
      </ul>
    <div class="logmod__tab-wrapper">
      <div class="logmod__tab lgm-2">
        <div class="logmod__heading">
          <span class="logmod__heading-subtitle">Enter your email and password <strong>to sign in</strong></span>
        </div>
        <div class="logmod__form">
          <%= form_for @volunteer, url: {action: "login"} do |f| %>
          <!--%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %-->
            <div class="sminputs">
              <div class="input full">
                  <%= f.label :email, :class => 'string optional' %>
                  <%= f.email_field :email, :id => 'user-email', :class => 'string optional', :placeholder => 'Email', autofocus: true %>
                </div>
            </div>
            <div class="sminputs">
              <div class="input full">
                <%= f.label :password, :class => 'string optional', :for => 'user-pw' %>
                <%= f.password_field :password, :class => 'string optional', :id => 'user-pw', :placeholder => 'Password', autocomplete: "off", :type => 'password' %><span class="hide-password"></span>
              </div>
            </div>
            <div class="simform__actions">
                <%= f.submit "Log in", :class => 'submit', :class => 'btn btn-success btn-lg pull-right', :type => 'submit' %>
                <span class="simform__actions-sidetext"><a class="special" role="link" href="#">Forgot your password?<br>Click here</a></span>
            </div>
            <% end %>
        </div> 
      </div>


      <div class="logmod__tab lgm-1">
        <div class="logmod__heading">
          <span class="logmod__heading-subtitle">Enter your personal details <strong>to create an acount</strong></span>
        </div>
        <div class="logmod__form">
          <%= form_for @volunteer, url: {action: "new"} do |f| %>
            <div class="sminputs">
              <div class="input full">
                <%= f.label :name %>
                <%= f.text_area :name %></br>
              </div>
            </div>

              <div class="sminputs">
              <div class="input full">
                <%= f.label :password, :class => 'string optional', :for => 'user-pw' %>
                <%= f.password_field :password %></br>
              </div>
            </div>
              <div class="sminputs">
              <div class="input full">
                <%= f.label :avaliability_date %>
                <%= f.date_field :avaliability_date %></br>
              </div>
            </div>
            <div class="sminputs">
              <div class="input full">
                <%= check_box_tag(:preference_one) %>
                <%= label_tag(:preference_one, "Traveling") %>
              </div>
            </div>
            <div class="sminputs">
              <div class="input full">
                <%= check_box_tag(:preference_two) %>
                    <%= label_tag(:preference_one, "Reading") %>
              </div>     
              <div class="input full">
                <%= check_box_tag(:preference_one) %>
                    <%= label_tag(:preference_one, "Cooking") %>
              </div>
            </div>
      

             <div class="sminputs">
              <div class="input full">
                <%= f.label :phone %>
                    <%= f.text_area :phone %></br>
              </div>
            </div>
             <div class="sminputs">
              <div class="input full">
                <%= f.label :gender %>
                    <%= f.text_area :gender %></br>
              </div>
            </div>
             <div class="sminputs">
              <div class="input full">
                <%= f.label :referee_name %>
                    <%= f.text_area :referee_name%></br>
              </div>
            </div>
             <div class="sminputs">
              <div class="input full">
               <%= f.label :refree_email %>
                    <%= f.text_area :refree_email%></br>
              </div>
            </div>
             <div class="sminputs">
              <div class="input full">
                <%= f.label :referee_description %>
                    <%= f.text_area :referee_description %></br>
              </div>
            </div>

            <div class="simform__actions">
                <%= f.submit "Submit", :class => 'submit', :class => 'btn btn-success btn-lg pull-right', :type => 'submit' %>
                <span class="simform__actions-sidetext">By creating an account you agree to our <a class="special" href="#" target="_blank" role="link">Terms &amp; Privacy</a></span>
            </div>
            <% end %>       
        </div>
      </div>
      </div>
    </div>
  </div>
</div> 


