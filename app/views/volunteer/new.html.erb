  <%= f.text_area :password %></br>
   <%= f.label :avaliability_date %>
  <%= f.text_area :avaliability_date %></br>
  <%= check_box_tag(:preference_one) %>
  <%= label_tag(:preference_one, "Traveling") %><br>
   <%= check_box_tag(:preference_two) %>
  <%= label_tag(:preference_one, "Reading") %><br>
   <%= check_box_tag(:preference_one) %>
  <%= label_tag(:preference_one, "Cooking") %><br>
